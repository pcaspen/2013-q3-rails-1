<div class="pull-right">
  <a href="/admin/login">Login</a>
</div>

<h1>Houses for sale</h1>

<% @houses.each do |house| %>
  <div class="house">
    <img src="<%= house.image_url %>" width="250" height="188">
    <br>

    <div class="pull-right">
      <%= house.price %>
    </div>

    <a href="/houses/<%= house.id %>">
      <%= house.address %>
    </a>
  </div>
<% end %>


<style>
  th { text-align: left; }
  th, td { padding: 0 5px; }
</style>

<h1>Search books</h1>

<table>
  <tr>
    <th>Topic</th>
    <td>
      <%== select_tag :topic, options_for_select(@topics),
         prompt: "Choose topic" %>
    </td>
  </tr>
  <tr>
    <th>Author</th>
    <td>
      <%== select_tag :author, options_for_select(@authors),
         prompt: "Choose author" %>
    </td>
  </tr>
  <tr>
    <th>Publication year</th>
    <td>
      <%== select_tag :year, options_for_select(@years),
         prompt: "Choose publication year" %>
    </td>
  </tr>
  <tr>
    <th></th>
    <td> 
      <%== submit_tag "Search" %>
    </td>
  </tr>
</table>

<hr>

<h1>Browse books</h1>

<p>Browse by topic:
  <ul>
    <% @topics.each do |topic| %>
      <li>
        <a href="/topic/<%= topic %>">
          <%= topic %>
        </a>
      </li>
    <% end %>
  </ul>
</p>

<p>Browse by author:
  <ul>
    <% @authors.each do |author| %>
      <li>
        <a href="/author/<%= author %>">
          <%= author %>
        </a>
      </li>
    <% end %>
  </ul>
</p>

<p>Browse by publication year:
  <ul>
    <% @years.each do |year| %>
      <li>
        <a href="/year/<%= year %>">
          <%= year %>
        </a>
      </li>
    <% end %>
  </ul>
</p>

<h1>Search for vehicles of a specific color by selecting a tile below:</h1>
<table>
  <tr>
  	<% @colors.each do |color| %>
    <td style="background-color:<%= color.html_color_code %>">
      <a href="/1/1">
        <img src="/images/bike.png">
      </a>
    </td>
    <% end %>
  </tr>
</table>


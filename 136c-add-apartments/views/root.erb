<link rel="stylesheet" type="text/css" href="/stylesheets/application.css">

<h1>Apartments</h1>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Address</th>
    <th>Rent</th>
    <th>Pets?</th>
    <th>Link</th>
  </tr>
  <% @apartments.each do |apartment| %>
    <tr>
      <td><%= apartment.id %></td>
      <td><%= apartment.address %></td>
      <td><%= apartment.rent_per_month %></td>
      <td><%= apartment.does_allow_pets %></td>
      <td><a href="<%= apartment.url %>"><%= apartment.url %></a></td>
    </tr>
  <% end %>
    <tr>
      <td>(new)</td>
      <td><%== text_field_tag :address, "" %></td>
      <td><%== text_field_tag :rent, "", size: 6 %></td>
      <td><%== text_field_tag :pets, "", size: 5 %></td>
      <td><%== text_field_tag :link, "", size: 60 %></td>
      <td><%== submit_tag "Create" %></td>
    </tr>
</table>

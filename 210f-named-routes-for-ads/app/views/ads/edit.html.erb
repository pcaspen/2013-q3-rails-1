<h1>Editing ad</h1>

<%== error_messages_for @ad %>

<%== form_tag edit_ad_path(@ad) do %>
  <div class="field">
    <%= label_tag :company_name %><br>
    <%= text_field_tag :company_name, @ad.company_name %>
  </div>
  <div class="field">
    <%= label_tag :duration %><br>
    <%= text_field_tag :duration, @ad.duration %>
  </div>
  <div class="actions">
    <%= submit_tag "Update" %>
  </div>
<% end %>

<%= link_to "Show", show_ad_path(@ad) %> |
<%= link_to "Back", list_ads_path %>

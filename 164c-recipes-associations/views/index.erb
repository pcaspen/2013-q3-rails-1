<h1><%= @title %></h1>

<table>
  <tr>
    <th>Name</th>
    <th>Author</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr>
      <td>
        <a href="/recipe/<%= recipe.name %>">
          <%= recipe.name %>
        </a>
      </td>
      <td><% author_name = Author.where(id: recipe.author_id).first.full_name %>
        <a href="/by-author/<%= "#{author_name}" %>"><%= author_name %></a>
      </td>
    </tr>
  <% end %>
</table>

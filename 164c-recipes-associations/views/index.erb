<h1><%= @title %></h1>

<table>
  <tr>
    <th>Name</th>
    <th>Author</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr>
      <td>
        <a href="/recipe/<%= recipe.name %>">
          <%= recipe.name %>
        </a>
      </td>
      <td>
        <a href="/by-author/<%= Author.find(recipe.author_id).full_name %>">
          <%= Author.find(recipe.author_id).full_name %>
        </a>
      </td>
    </tr>
  <% end %>
</table>

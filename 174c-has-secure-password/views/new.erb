<%== error_messages_for @user %>

<h1>Register new user</h1>

<p>
  Username<br>
  <%== text_field_tag :username, @user.username %>
</p>

<p>
  Password<br>
  <%== password_field_tag :password %>
</p>

<p>
  Password confirmation<br>
  <%== password_field_tag :password_confirmation %>
</p>

<p>
  <%== submit_tag "Register User" %>
</p>
